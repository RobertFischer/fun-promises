{
	"name": "fun-promises",
	"version": "1.0.0-rc.3",
	"description": "A library for making Promises more friendly, fluent, and fun(ctional).",
	"main": "dist/node/v14/index.js",
	"module": "dist/es6/esm/index.js",
	"browser": "dist/browser/min/index.js",
	"reactNative": "dist/rn/index.js",
	"source": "index.ts",
	"repository": "git@github.com:RobertFischer/fun-promises.git",
	"author": "Robert Fischer",
	"license": "Unlicense",
	"private": false,
	"keywords": [
		"promise",
		"performance",
		"promises",
		"promises-a",
		"promises-aplus",
		"async",
		"await",
		"deferred",
		"deferreds",
		"future",
		"flow control",
		"dsl",
		"fluent interface",
		"functional programming",
		"functional"
	],
	"homepage": "https://robertfischer.github.io/fun-promises/",
	"dependencies": {
		"@babel/runtime-corejs3": "^7.12.5",
		"core-js": "^3.7.0",
		"debug": "^4.2.0",
		"lodash": "^4.17.20",
		"tslib": "^2.0.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.1",
		"@babel/core": "^7.12.3",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.1",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/commit-analyzer": "^8.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/github": "^7.1.1",
		"@semantic-release/npm": "^7.0.6",
		"@semantic-release/release-notes-generator": "^9.0.1",
		"@tsconfig/node10": "^1.0.7",
		"@tsconfig/node12": "^1.0.7",
		"@tsconfig/node14": "^1.0.0",
		"@tsconfig/react-native": "^1.0.2",
		"@types/lodash": "^4.14.165",
		"babel-minify": "^0.5.1",
		"babel-plugin-lodash": "^3.3.4",
		"conventional-changelog-conventionalcommits": "^4.5.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^4.3.0",
		"jest": "^26.6.3",
		"jest-extended": "^0.11.5",
		"lint-staged": "^10.5.1",
		"parcel": "^1.12.4",
		"prettier": "^2.1.2",
		"semantic-release": "^17.2.2",
		"semantic-release-npm-deprecate-old-versions": "^1.0.1",
		"ts-jest": "^26.4.3",
		"typedoc": "^0.19.2",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^4.1.1-rc"
	},
	"scripts": {
		"test": "DEBUG='fun-promises,fun-promises:*' tsc --noEmit -p tsconfig.json && jest --detectOpenHandles --forceExit",
		"build:docs": "rm -rf ./docs && yarn build:docs:typedocs && yarn build:docs:changelog && yarn build docs:test && yarn build:docs:coverage",
		"build:docs:typedocs": "typedoc --tsconfig tsconfig.json",
		"build:docs:changelog": "cp ./CHANGELOG.md ./docs/ || true",
		"build:docs:test": "yarn test | tee ./docs/test-results.txt",
		"build:docs:coverage": "npx browserslist --update-db && (( echo 'Explicitly Supported Browsers (MUST support Promises)' && npx browserslist && npx browserslist --coverage && npx browserslist --coverage=US ) | tee ./docs/coverage.txt)",
		"watch:compile": "tsc --watch --noEmit -p tsconfig.json",
		"watch:test": "yarn test --watch",
		"build": "DEBUG='*' rm -rf dist && yarn build:esnext && yarn build:es6 && yarn build:node && yarn build:browser && yarn build:docs",
		"build:esnext": "tsc -p tsconfig.json",
		"build:es6": "yarn build:cjs && yarn build:esm && yarn build:umd && yarn build:amd",
		"build:cjs": "tsc -p ./tsconfig/cjs.json",
		"build:esm": "tsc -p ./tsconfig/esm.json",
		"build:umd": "tsc -p ./tsconfig/umd.json",
		"build:amd": "tsc -p ./tsconfig/amd.json",
		"build:node": "yarn build:node:10 && yarn build:node:12 && yarn build:node:14",
		"build:node:10": "tsc -p ./tsconfig/node10.json",
		"build:node:12": "tsc -p ./tsconfig/node12.json",
		"build:node:14": "tsc -p ./tsconfig./node14.json",
		"build:browser": "yarn build:esnext && parcel build ./dist/esnext/index.js --target browser --out-dir ./dist/browser/ --global FunPromise --detailed-report 15",
		"prepack": "yarn build",
		"serve:docs": "yarn build:docs && http-server ./docs",
		"polish": "prettier --write .",
		"clean": "./script/clean"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"prepare-commit-msg": "./script/has-message \"$1\" || ( exec < /dev/tty && git cz --hook )"
		}
	},
	"lint-staged": {
		"*.(js|cjs|mjs|json|yaml|yml|md|css|htm|htm|ts)": "prettier --write",
		"*.json": "jq ."
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"sideEffects": false,
	"browserslist": [
		"defaults, cover 95% and supports promises",
		"not dead"
	]
}
